package alvi1;
import java.util.*;
public class simple {
	
		public static void main(String[] args)   { 
		
			System.out.print("Enter your decimel number =");
			Scanner sc=new Scanner(System.in);
			int n=sc.nextInt();
			int ld;
			int a=0,i=0;
			while(n>0)
			{
				ld=n%2;
				n=n/2;
				a=a+ld*(int)Math.pow(10,i);
				i++;
			}
			System.out.println(a);
		}
} 

